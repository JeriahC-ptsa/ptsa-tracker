# Production Environment Variables for Render Deployment
# Copy these values to Render's Environment Variables section

# Flask Configuration
FLASK_ENV=production
FLASK_APP=wsgi.py
SECRET_KEY=ptsa-render-secret-key-2024-johannesburg-za

# Database Configuration
DATABASE_URL=sqlite:///app.db

# Application Settings
PYTHONPATH=/app
WTF_CSRF_ENABLED=True
WTF_CSRF_TIME_LIMIT=None

# Server Configuration (Render will set PORT automatically)
PORT=10000

# Email Configuration (Optional - Configure later if needed)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=PTSA Tracker <noreply@ptsa.co.za>

# Security Settings
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Application Metadata
APP_NAME=PTSA Tracker
APP_VERSION=2.0
DEPLOYMENT_REGION=singapore
DEPLOYMENT_PLATFORM=render
